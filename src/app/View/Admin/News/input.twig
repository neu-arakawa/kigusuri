{% extends "Admin/layout.twig" %}
{% import "Admin/macro.twig" as forms %}
{% block content %}

<section class="content-header">
    <h1>
    サイト更新情報
        <small>登録・編集</small>
    </h1>
</section>


<section class="content">
    <div class="box">

{% if errors %}
<div class="alert alert-error">
<h4>正しく入力されていない項目があります。</h4>
<ul>
{% for error in errors %}
<li>{{error}}</li>
{% endfor %}
</ul>
</div>
{% endif %}
        
        <div class="box-header with-border">
			<h3 class="box-title">入力画面</h3>
		</div>
        
        <form action="{{ c.app.urlFor('default',{'controller': 'news','action': 'edit'})}}" novalidate="novalidate" class="form-horizontal" id="AdminNewsEditForm" enctype="multipart/form-data" method="post" accept-charset="utf-8">
<input type="hidden" name="{{csrf_key}}" value="{{csrf_token}}">
<input type="hidden" name="next" value="preview">
<input type="hidden" name="id" value="">

        <div class="box-body">

    <div class="form-group">
<label class="col-sm-2 control-label">公開日 <i class="fa fa-asterisk text-red"></i></label>
<div class="col-sm-2">
<input name="date" class="datepicker form-control" placeholder="日付" type="text" value="" required="required"/>
</div>
</div>

    <div class="form-group">
<label class="col-sm-2 control-label">タイトル <i class="fa fa-asterisk text-red"></i></label>
<div class="col-sm-9">
<input name="title" class="form-control" placeholder="タイトル" maxlength="100" type="text" value="" required="required"/>
</div>
</div>

<div class="form-group" >
<label class="col-sm-2 control-label">URL </label>
<div class="col-sm-9">
<div class="panel panel-default">
    <div class="panel-body">
    <input name="url" class="form-control" placeholder="http://〜" maxlength="100" type="text" value="" required="required"/>
    <br>
    <label><input type='checkbox' name='blank_flg' value='1'>別ウインドウで表示する</label>
</div></div>
</div>
</div>

    <div class="panel panel-default">
        <div class="panel-heading">表示設定</div>
        <div class="panel-body">
            <div class="form-group">
<label for="AdminNewsDispFlag" class="col-sm-2 control-label">公開設定 <i class="fa fa-asterisk text-red"></i></label>
<div class="col-sm-9">
<div class="radio"><label class="">
<input type="radio" name="show_flg" id="AdminNewsDispFlag1" value="1" checked="checked" required="required" />公開する</label>
&nbsp;&nbsp;&nbsp;<label class=""><input type="radio" name="show_flg" id="AdminNewsDispFlag0" value="0" required="required" />非表示にする</label>
</div>
</div>
</div>
        </div>
    </div>

</div>

        <div class="box-footer">
    <button type="submit" class="btn btn-primary pull-right">内容を確認する <i class="fa fa-arrow-circle-right"></i></button></div>
        </form> </div>
</section>


{% endblock %}
