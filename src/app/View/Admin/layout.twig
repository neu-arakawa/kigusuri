                <div id="flashMessageGreen" class="message"></div>
        <div id="flashMessageRed" class="message"></div>
        <div id="flashMessageBlue" class="message"></div>


{% set msg = c.message('info') %}
<script type="text/javascript">
$(function($)
{
    {% if msg %}
    $(this).flashMessage($('#flashMessageBlue'), '{{msg}}')
    {% endif %}
    {% set msg = c.message('error') %}
    {% if msg %}
    $(this).flashMessage($('#flashMessageRed'), '{{msg}}')
    {% endif %}
});
</script>

